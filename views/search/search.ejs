  <div class="div-1">
    <h1 class="main-heading text-6xl">Cases Status</h1>
  </div>

  <div class="world-data bg-gray-400 , mx-1 blue">
    <h3 class="text-5 px font-semibold ">World Data</h3>

    <div id="carouselExampleIndicators" class="carousel slide px-1" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <!-- <img src="..." class="d-block w-100" alt="..."> -->
          <h1 class=" main-carousle px-2 white ">India</h1>
          <h1 class="main-heading px-2 white">
            Number Of cases
            <%=cases%>
          </h1>

          <h1 class="main-heading px-2 white">
            Active
            <%=active%>
          </h1>

          <h1 class="main-heading px-2 white">
            Deaths
            <%=deaths%>
          </h1>

          
          <h1 class="main-heading px-2 white">
            Recoverd
            <%=recoverd%>
          </h1>


        </div>
        <div class="carousel-item">
          <h1 class="main-heading  px-2">Our api</h1>
          <p class="font-semibold center px-2">
